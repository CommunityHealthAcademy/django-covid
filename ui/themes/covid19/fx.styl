pseudo-self()
    &,
    &::after,
    &::before
        { block }


.is-disabled
[disabled]
    filter: grayscale(1) opacity(.5)
    pointer-events: none


fx{":"}
    +at-class()
        +pseudo-self()
            --fx-delay: 0s
            transition-delay: var(--fx-delay)
            transition-property: all
            transition-duration: var(--fx-time)
            transition-timing-function: var(--fx-func)

    &shift
        +at-class()
            +pseudo-self()
                transition-property: all

    &underline
        +at-class()
            +on-hover()
                text-decoration: underline
